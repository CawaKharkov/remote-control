{% extends 'base.html.twig' %}

{% block body %}
    <!-- Begin page content -->
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <div class="m-t-1">
                    <h1>Admin</h1>
                </div>
                <hr>
                <table class="table table-hover">
                    <thead class="thead-inverse">
                    <tr>
                        <th>#</th>
                        <th>{{ 'Tile'|trans }}</th>
                        <th>{{ 'Slug'|trans }}</th>
                        <th style="width: 30%">{{ 'Actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for group in commandGroups  %}
                        <tr>
                            <th scope="row">{{ group.id }}</th>
                            <td>{{ group.title|e }}</td>
                            <td><a href="#">{{ group.slug|e }}</a></td>
                            <td>
                                <a href="{{ path('admin_group_edit', { 'id': group.id }) }}">Edit</a>
                                <a href="edit">Delete</a>
                            </td>
                        </tr>
                    {% endfor %}


                    </tbody>
                </table>

            </div>
            {% include "@AppAdmin/partials/sidemenu.html.twig" %}

        </div>


    </div>

{% endblock %}

{% block stylesheets %}

{% endblock %}
